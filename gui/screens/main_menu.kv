<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 40

        Label:
            text: "Main Menu"
            font_size: 32
            size_hint_y: None
            height: self.texture_size[1] + 20

        Button:
            text: "Add Expense"
            on_release: app.root.current = "add_expense"

        Button:
            text: "View Budget"
            on_release: app.root.current = "view_budget"
        
        Button:
            text: "Exit"
            on_release: app.stop()